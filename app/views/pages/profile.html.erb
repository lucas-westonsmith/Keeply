<div class="container my-5 user-profile">
  <div class="profile-card p-4 rounded shadow">
    <div class="profile-header text-center mb-4">
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar, class: "profile-avatar rounded-circle" %>
      <% else %>
        <%= image_tag "default-avatar.png", class: "profile-avatar rounded-circle" %>
      <% end %>
      <h1 class="mt-3"><%= current_user.first_name %> <%= current_user.last_name %></h1>
      <p class="text-muted"><%= current_user.email %></p>
    </div>

    <div class="profile-details">
      <p><strong>Date of Birth:</strong> <%= current_user.date_of_birth || 'Not specified' %></p>
      <p><strong>Country:</strong> <%= current_user.country || 'Not specified' %></p>
      <p><strong>Phone Number:</strong> <%= current_user.phone_number || 'Not specified' %></p>
      <p><strong>Preferred Language:</strong> <%= current_user.preferred_language || 'Not specified' %></p>
    </div>

    <div class="profile-actions mt-4 text-center">
      <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-primary' %>
      <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary ms-2' %>
    </div>
  </div>
</div>
