<!DOCTYPE html>
<html>
  <head>
    <title><%= meta_title %></title>
    <meta name="description" content="<%= meta_description %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <!-- âœ… FIX pour charger controllers/application.js avec le bon fingerprint -->
    <%= javascript_include_tag "controllers/application", "data-turbo-track": "reload", defer: true %>
    <%= javascript_importmap_tags %>

    <link href="<%= asset_path('favicon.ico') %>" rel="icon" type="image/x-icon" />
    <meta property="og:title" content="<%= meta_title %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= meta_image %>" />
    <meta property="og:description" content="<%= meta_description %>" />
    <meta property="og:site_name" content="<%= meta_title %>" />
  </head>

  <body>
    <div class="wrapper">
      <%= render "shared/navbar" %>
      <%= render "shared/flashes" %>
      <main class="content">
        <%= yield %>
      </main>
      <%= render "shared/footer" %>
    </div>
  </body>
</html>
