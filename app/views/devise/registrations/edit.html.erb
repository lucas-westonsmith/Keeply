<div class="form-container">
  <h1 class="form-title"><span class="angry-underline-blue">Edit profile</span></h1>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-columns">
      <!-- Colonne de gauche -->
      <div class="form-column">
        <div class="form-group">
          <%= f.label :first_name, "First name", class: "form-label" %>
          <%= f.input :first_name, required: true, label: false, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "Last name", class: "form-label" %>
          <%= f.input :last_name, required: true, label: false, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.input :email, required: true, label: false, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Password", class: "form-label" %>
          <%= f.input :password, hint: "Leave blank if you don't want to change it", required: false, label: false, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm password", class: "form-label" %>
          <%= f.input :password_confirmation, required: false, label: false, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :current_password, "Current password", class: "form-label" %>
          <%= f.input :current_password, hint: "We need your current password to confirm your changes", required: true, label: false, class: "form-input" %>
        </div>
      </div>

      <!-- Colonne de droite -->
      <div class="form-column">
        <div class="form-group">
          <%= f.label :date_of_birth, "Date of birth", class: "form-label" %>
          <%= f.input :date_of_birth, as: :date, label: false, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :country, "Country", class: "form-label" %>
          <%= f.input :country, as: :string, label: false, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :phone_number, "Phone number", class: "form-label" %>
          <%= f.input :phone_number, label: false, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :preferred_language, "Preferred language", class: "form-label" %>
          <%= f.input :preferred_language, as: :select, collection: ['English', 'French', 'Spanish'], include_blank: true, label: false, class: "form-select" %>
        </div>

        <div class="form-group">
          <%= f.label :avatar, "Picture (Avatar)", class: "form-label" %>
          <% if resource.avatar.attached? %>
            <p class="file-info">Current file: <%= resource.avatar.filename %></p>
          <% end %>
          <%= f.input :avatar, as: :file, label: false, class: "form-input-file" %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn btn-primary action-button" %>
    </div>
  <% end %>

  <div class="form-cancel">
    <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-secondary action-button" %>
  </div>
</div>
