<div class="back-button">
  <%= link_to request.referer || root_path, class: "back-link" do %>
    <i class="back-arrow"></i>
    Back
  <% end %>
</div>

<div class="form-container" data-controller="toggle-details">
  <h1 class="form-title">
    <span class="angry-underline-blue">Sign up</span>
  </h1>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-columns">
      <!-- Première section visible -->
      <div class="form-column">
        <!-- Email -->
        <div class="form-group">
          <%= f.label :email, class: "form-label", style: "font-weight: bold;" %>
          <%= f.input :email, required: true, autofocus: true, label: false, class: "form-input" %>
        </div>

        <!-- First name -->
        <div class="form-group">
          <%= f.label :first_name, class: "form-label", style: "font-weight: bold;" %>
          <%= f.input :first_name, required: true, label: false, class: "form-input" %>
        </div>
      </div>

      <div class="form-column">
        <!-- Password -->
        <div class="form-group">
          <%= f.label :password, class: "form-label", style: "font-weight: bold;" %>
          <%= f.input :password, required: true, hint: "#{@minimum_password_length} characters minimum", label: false, class: "form-input" %>
        </div>

        <!-- Confirm password -->
        <div class="form-group">
          <%= f.label :password_confirmation, class: "form-label", style: "font-weight: bold;" %>
          <%= f.input :password_confirmation, required: true, label: false, class: "form-input" %>
        </div>
      </div>
    </div>

    <!-- Section cachée qui se déplie -->
    <div id="more-details" class="hidden-details" data-toggle-details-target="details">
      <div class="form-columns">
        <div class="form-column">
          <!-- Last name -->
          <div class="form-group">
            <%= f.label :last_name, class: "form-label", style: "font-weight: bold;" %>
            <%= f.input :last_name, required: false, label: false, class: "form-input" %>
          </div>

          <!-- Date of birth -->
          <div class="form-group">
            <%= f.label :date_of_birth, "Date of birth", class: "form-label", style: "font-weight: bold;" %>
            <%= f.input :date_of_birth, as: :string, placeholder: "YYYY-MM-DD", label: false, input_html: { type: "date", class: "form-input", min: "1900-01-01", max: "#{Date.today}" } %>
          </div>

          <!-- Phone number -->
          <div class="form-group">
            <%= f.label :phone_number, class: "form-label", style: "font-weight: bold;" %>
            <%= f.input :phone_number, label: false, class: "form-input" %>
          </div>
        </div>

        <div class="form-column">
          <!-- Country -->
          <div class="form-group">
            <%= f.label :country, class: "form-label", style: "font-weight: bold;" %>
            <%= f.input :country, as: :string, label: false, class: "form-input" %>
          </div>

          <!-- Preferred language -->
          <div class="form-group">
            <%= f.label :preferred_language, class: "form-label", style: "font-weight: bold;" %>
            <%= f.input :preferred_language, as: :select, collection: ['English', 'French', 'Spanish'], include_blank: true, label: false, class: "form-select" %>
          </div>

          <!-- Picture (Avatar) -->
          <div class="form-group">
            <%= f.label :avatar, class: "form-label", style: "font-weight: bold;" %>
            <%= f.input :avatar, as: :file, label: false, class: "form-input-file" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Bouton More Details -->
    <button type="button" class="toggle-details-btn" data-action="toggle-details#toggle" data-toggle-details-target="button">
      More details
    </button>

    <!-- Submit Button -->
    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-primary action-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
