<div class="form-container">
  <h1 class="form-title"><span class="angry-underline-blue">Log in</span></h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-columns">
      <div class="form-column">
        <div class="form-group">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.input :email, required: true, autofocus: true, label: false, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Password", class: "form-label" %>
          <%= f.input :password, required: true, label: false, class: "form-input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group form-checkbox-group">
            <div class="checkbox-item">
              <%= f.input :remember_me, as: :boolean, label: "Remember me" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary action-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
