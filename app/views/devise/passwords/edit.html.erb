<div class="form-container">
  <h1 class="form-title">Change Password</h1>
  <p class="form-description">Set a new password for your account.</p>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "New Password", class: "form-label" %>
      <%= f.input :password, required: true, autofocus: true, hint: "#{@minimum_password_length} characters minimum", label: false, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
      <%= f.input :password_confirmation, required: true, label: false, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update Password", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
